        <VerticalStackLayout
            Padding="0,40"
            HeightRequest="{OnPlatform Default=300,
                                       WinUI=500}"
            HorizontalOptions="Fill"
            Spacing="40"
            VerticalOptions="Start"
            WidthRequest="{OnPlatform Default=300,
                                      WinUI=500}">

            <Rectangle
                BackgroundColor="{Binding Source={x:Reference ColorPicker}, Path=SelectedColor}"
                HeightRequest="60"
                WidthRequest="{OnPlatform Default=200,
                                          WinUI=300}" />

            <cp:ColorCircle
                x:Name="ColorPicker"
                ReticleRadius="{OnPlatform Default=20,
                                           WinUI=30,
                                           Android=20}"
                SelectedColor="Orange"
                ShowReticleCrossHairs="true" />

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
