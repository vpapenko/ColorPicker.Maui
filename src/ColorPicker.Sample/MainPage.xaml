<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ColorPicker.Sample.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cp="clr-namespace:ColorPicker;assembly=ColorPicker">

    <ScrollView>
        <VerticalStackLayout Padding="30,0"
                             Spacing="25">

            <Rectangle WidthRequest="400"
                       HeightRequest="100"
                       BackgroundColor="{Binding Source={x:Reference ColorPicker},
                                                 Path=SelectedColor}" />

            <cp:ColorCircle x:Name="ColorPicker"
                            HorizontalOptions="Fill"
                            ReticleRadius="{OnPlatform Default='20',
                                                       WinUI='40',
                                                       Android='20'}"
                            SelectedColor="Green"
                            ShowReticleCrossHairs="true" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
